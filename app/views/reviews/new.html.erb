<div class="container">
	<div class="row">
		<h2> Leave a review for <span id="movieName"> <%= params[:title]%> </span></h2>
	</div>
	<% if notice %>
	  <p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
	  <p class="alert alert-danger"><%= alert %></p>
	<% end %>
</div>


<div class="container">
	<div class="row">
		<div class="panel panel-default">
		    <div class="panel-heading">Write a review!</div>
		    <div class="panel-body">
		    <%= form_for @review do |f|%>
		        <div class="form-group">
		        <%= f.label :comment %>
		        <%= f.text_field(:comment, class:"form-control") %> 
		        </div>
		        <div class="form-group">
		        <%= f.label :rating %>
		        <%= f.number_field(:rating, required: true, in: 1..5, step: 1, class:"form-control") %> 
		        </div>
		        <div class="form-group">
		        <%= f.label :first_name %>
		        <%= f.text_field(:first_name, required: true, class:"form-control") %> 
		        </div>
		        <div class="form-group">
		        <%= f.label :last_name %>
		        <%= f.text_field(:last_name, required: true, class:"form-control") %> 
		        </div>
		        <div class="form-group">
		        <%= f.label :email %>
		        <%= f.text_field(:email, required: true, class:"form-control") %> 
		        </div>
            <%= f.hidden_field :movie_id, value: params[:id] %>
		        <%= f.submit class: "btn btn-default" %>
		    <% end %>
		    </div>
		</div>
	</div>
</div>