<div class="container">
	<h1> Reviewster</h1>
	<% if notice %>
	  <p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
	  <p class="alert alert-danger"><%= alert %></p>
	<% end %>
</div>


<div class="container">
	<div class="row">
				Sort by: <button> <%= link_to "Title", root_path(:sort => 'title')%> </button>
					 <button> <%= link_to "Release Date", root_path(:sort => 'date') %> </button>
			 		 <button> <%= link_to "Genre", root_path(:sort => 'genre')%> </button>
	</div>
	<div class="row">
		<div class='col col-md-8 col-left'>
			<div class="container container-left">
				<% @movielist.each do |movie, url, reviews| %>
				<div class="row movie-node">
					<div class="col col-md-4">
						<div class="movieicon"><%= image_tag "movie.png" %> </div>
					</div>
					<div class="col col-md-8">
						<h3> <a href=<%= url %>> <%= movie.title %> </a> </h3>
						<div> <b> Release Date: </b> <%= movie.release_date.to_date%> </div>
						<div> <b> Genre: </b> <%= movie.genre %> </div>
						<b> Reviews: </b>
						<% reviews.each do |review| %>
							<p> <%= review.rating %>/5 <%= review.comment %> - <%= review.first_name %> 
								<% review.last_name %> </p>
						<% end %>
						<a> <%= link_to "See all reviews", movie_path(movie.id) %> </a>
					</div>
				</div>
				<% end %>
			</div>
		</div>
		<div class='col col-md-4 col-right'>
			<h3> Recent Reviews </h3>
			<table class="table">
	    		<thead>
	        		<tr>
	            		<th>Review</th>
	            		<th>Rating</th>
	        		</tr>
	    		</thead>
	    		<tbody>
	    			<% @reviewlist.each do |review, title| %>
	    				<tr>
	    					<td> <%= review.comment %> <br> <%= title %> </td>
	    					<td> <%= review.rating %>/5 </td>
	    				</tr>
	    			<% end %>
	    		</tbody>
			</table>
			<a> <%= link_to "View all reviews", reviews_path %> </a>
			<h3> Now playing </h3>
			<table class="table" id="movieList">
	    		<thead>
	        		<tr>
	            		<th>Title</th>
	            		<th>Review</th>
	        		</tr>
	    		</thead>
	    		<tbody>
	    		</tbody>
			</table>
		</div>
	</div>
</div>

